/* 99 bottles of bear on the wall */

function lyrics_generator99(){

 var lyrics = "";
 
 var num_bottles = 99;

 while (num_bottles > 1){

  lyrics = num_bottles + " bottles of beer on the wall," + num_bottles + " bottles of beer. \n Take one down and pass it around,"+ (num_bottles - 1) + " bottles of beer on the wall." ;
  console.log(lyrics)
  num_bottles --;
  
 }
 if (num_bottles === 1){
  lyrics = "1 bottle of beer on the wall, 1 bottle of beer. \n Take one down and pass it around, no more bottles of beer on the wall. \n No more bottles of beer on the wall, no more bottles of beer. \n Go to the store and buy some more, 99 bottles of beer on the wall."
 }
 console.log(lyrics)
}
